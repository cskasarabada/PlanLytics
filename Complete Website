    <!-- JavaScript Functions -->
    <script>
        // Navigation and smooth scrolling
        function scrollToDemo() {
            document.getElementById('demo').scrollIntoView({ behavior: 'smooth' });
        }

        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }

        // Pricing toggle
        function showMonthly() {
            document.getElementById('pricing-monthly').classList.remove('hidden');
            document.getElementById('pricing-annual').classList.add('hidden');
            document.getElementById('monthly-btn').classList.add('bg-blue-600', 'text-white');
            document.getElementById('monthly-btn').classList.remove('text-gray-600');
            document.getElementById('annual-btn').classList.remove('bg-blue-600', 'text-white');
            document.getElementById('annual-btn').classList.add('text-gray-600');
        }

        function showAnnual() {
            document.getElementById('pricing-annual').classList.remove('hidden');
            document.getElementById('pricing-monthly').classList.add('hidden');
            document.getElementById('annual-btn').classList.add('bg-blue-600', 'text-white');
            document.getElementById('annual-btn').classList.remove('text-gray-600');
            document.getElementById('monthly-btn').classList.remove('bg-blue-600', 'text-white');
            document.getElementById('monthly-btn').classList.add('text-gray-600');
        }

        // File upload handling
        document.getElementById('upload-area').addEventListener('click', function() {
            document.getElementById('file-input').click();
        });

        function handleFileUpload(event) {
            const file = event.target.files[0];
            if (file) {
                document.getElementById('file-name').textContent = file.name;
                document.getElementById('file-info').classList.remove('hidden');
                document.getElementById('analyze-btn').disabled = false;
                document.getElementById('analyze-btn').textContent = 'Analyze Document (Free Preview)';
            }
        }

        function loadSampleDocument(type) {
            const sampleNames = {
                'sales-commission': 'Sample_Sales_Commission_Plan.pdf',
                'bonus-plan': 'Sample_Executive_Bonus_Plan.docx',
                'spiff-program': 'Sample_Product_SPIFF_Program.xlsx'
            };
            
            document.getElementById('file-name').textContent = sampleNames[type];
            document.getElementById('file-info').classList.remove('hidden');
            document.getElementById('analyze-btn').disabled = false;
            document.getElementById('analyze-btn').textContent = 'Analyze Sample Document';
        }

        function startAnalysis() {
            // Show progress
            document.getElementById('upload-content').classList.add('hidden');
            document.getElementById('upload-progress').classList.remove('hidden');
            document.getElementById('analyze-btn').disabled = true;
            document.getElementById('analyze-btn').textContent = 'Analyzing...';

            // Simulate analysis (in real app, this would call your Render API)
            setTimeout(function() {
                // Hide progress, show results
                document.getElementById('upload-progress').classList.add('hidden');
                document.getElementById('upload-content').classList.remove('hidden');
                document.getElementById('demo-placeholder').classList.add('hidden');
                document.getElementById('demo-results').classList.remove('hidden');
                document.getElementById('analyze-btn').disabled = false;
                document.getElementById('analyze-btn').textContent = 'Analyze Another Document';
            }, 3000);
        }

        // Modal functions
        function showUpgradeModal() {
            document.getElementById('upgrade-modal').classList.remove('hidden');
        }

        function closeUpgradeModal() {
            document.getElementById('upgrade-modal').classList.add('hidden');
        }

        function startProTrial() {
            // Redirect to signup or payment page
            window.location.href = '/signup?plan=professional';
        }

        // Call-to-action functions
        function startFreeTrial() {
            scrollToDemo();
        }

        function startProfessionalTrial() {
            window.location.href = '/signup?plan=professional';
        }

        function startAnnualTrial() {
            window.location.href = '/signup?plan=professional&billing=annual';
        }

        function contactSales() {
            window.location.href = 'mailto:sales@icm-planlytics.com?subject=Enterprise Plan Inquiry';
        }

        function downloadPreview() {
            // In real app, generate and download preview report
            alert('Preview report download would start here. Upgrade for full reports in Excel, PDF, and JSON formats.');
        }

        function playDemoVideo() {
            // Open demo video modal or redirect to video
            alert('Demo video would play here. Coming soon!');
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // API Integration with Render Backend
       // Replace this function in your website
        async function callRenderAPI(file, analysisType) {
            const formData = new FormData();
            formData.append('file', file);
            formData.append('template', analysisType);

            try {
                // 🔥 UPDATE THIS URL with your actual Render URL
                const response = await fetch('https://icm-planlytics.onrender.com/analyze/enhanced', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'Accept': 'application/json',
                    }
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();
                return result;
            } catch (error) {
                console.error('API call failed:', error);
                throw error;
            }
        }
    </script>
